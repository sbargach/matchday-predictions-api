{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "matchdaypredictions": "Server=localhost;Database=MatchdayPredictions;Integrated Security=True;TrustServerCertificate=True"
  },
  "MatchdayPredictions": {
    "Database": {
      "MaxRetryCount": 3,
      "RetryDelaySeconds": 2
    }
  }
}
